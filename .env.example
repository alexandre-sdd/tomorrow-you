# Mistral (required — LLM + avatar generation via Pixtral)
MISTRAL_API_KEY=
MISTRAL_MODEL=mistral-large-latest

# ElevenLabs (required — full voice pipeline: STT + TTS)
ELEVENLABS_API_KEY=
ELEVENLABS_DEFAULT_VOICE_ID=

# Avatar Generation (optional — falls back to Mistral Pixtral if not set)
AVATAR_PROVIDER=mistral
GEMINI_API_KEY=

# Server
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000

# Storage
STORAGE_PATH=./storage/sessions
