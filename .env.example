# Mistral (required — LLM + avatar generation via Pixtral)
MISTRAL_API_KEY=
MISTRAL_MODEL=mistral-large-latest

# Mistral Agent IDs — create each agent on https://console.mistral.ai/agents
# Paste the system prompt from prompts/<agent>.md into the agent builder
MISTRAL_AGENT_ID_FUTURE_SELF=ag:

# ElevenLabs (required — full voice pipeline: STT + TTS)
ELEVENLABS_API_KEY=
ELEVENLABS_DEFAULT_VOICE_ID=

# Voice pool — maps SelfCard visual_style.mood to ElevenLabs voice IDs.
# All 7 mood values: elevated, warm, sharp, grounded, ethereal, intense, calm
# Format: single-line JSON string
ELEVENLABS_VOICE_POOL_JSON={"elevated":"","warm":"","sharp":"","grounded":"","calm":"","intense":"","ethereal":""}

# Avatar Generation (optional — falls back to Mistral Pixtral if not set)
AVATAR_PROVIDER=mistral
GEMINI_API_KEY=

# Server
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000

# Storage
STORAGE_PATH=./storage/sessions
